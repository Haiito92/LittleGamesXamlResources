<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LittleGamesXamlResources.Themes">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <!--#region Colors-->
            <Color x:Key="SecondaryColor">#FFF5E1</Color>
            <Color x:Key="HoverSecondaryColor">#E6D9B9</Color>
            <Color x:Key="PressedSecondaryColor">#CFC19A</Color>
            <Color x:Key="NeutralColor">#2E2E2E</Color>
            <!--#endregion-->
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <!--#region Colors-->
            <Color x:Key="SecondaryColor">#2E2E2E</Color>
            <Color x:Key="HoverSecondaryColor">#3B3B3B</Color>
            <Color x:Key="PressedSecondaryColor">#474747</Color>
            <Color x:Key="NeutralColor">#FFF5E1</Color>
            <!--#endregion-->
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
    
    <!--#region Colors-->
    <Color x:Key="MainColor">#FF6F61</Color>
    <Color x:Key="AccentColor">#FFD3B6</Color>
    <Color x:Key="HighlightColor">#FFB347</Color>
    <!--#endregion-->
</ResourceDictionary>
